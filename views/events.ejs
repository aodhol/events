<!doctype html> 
<html>
<head>
	<meta charset="utf-8">
	<title>BBC News - Near Me</title>

	<meta name="description" content="">
	<meta name="author" content="">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

	<link rel="stylesheet" type="text/css" href="/stylesheets/reset.css">
	<link rel="stylesheet" type="text/css" href="/stylesheets/default.css">
<!--
    <link rel="stylesheet" href="/stylesheets/gantt.css" />
    <link rel="stylesheet" href="http://twitter.github.com/bootstrap/assets/css/bootstrap.css" /> -->


	<script type="text/javascript" src="/javascripts/jquery-1.7.min.js"></script>
<!--	<script type="text/javascript" src="/javascripts/jquery.fn.gantt.js"></script>
	<script type="text/javascript" src="/javascripts/events.js"></script> -->


<script type="text/javascript" src="/javascripts/date.extensions.js"></script>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script>
	$(document).ready(function() {
		//Replace date with relative time.
		$('.event-created-at').each(function(){
			var dateStr = $(this).text();
			$(this).text(new Date(dateStr).toRelativeTime())
		});
	});
</script>

<style>
	.event-concepts li{
		display:inline;
		border-radius: 5px;
		background-color:#99F;
		border:0px solid #fff;
		color:#fff;
	}

	.event-concepts li a {
		color:#fff;
	}

ol.events-list{
	list-style-type: decimal;
	list-style-position: inside;
	margin-left:12px;
}

ol.events-list li div{
	margin:8px;
}

ol.events-list li div{
	font-size: 0.8em;
}

</style>

</head>

	<body>

			<div id='results'></div>

		<header role="banner">
			<div id="global-header">
				<a href="http://www.bbc.co.uk">
					<img src="/images/bbc_blocks.png" width="84" height="24" alt="British Broadcasting Corporation" />
				</a>
			</div>
			<div id="local-header">
				<h1>
					<a href="http://www.bbc.co.uk/news">News</a>
					<span class="location"></span>
				</h1>
			</div>
		</header>

		<div id="container">

			<section role="main">

				<div id="story-list"></div>

<ol class="events-list">

<%

%>

<%
for(var i = 0; i < related.length; i++){
%>

<% if (related[i].articles.length > 0) { %>


	<%var event = related[i];%>

	<%
	var concepts = event.concepts;
	%>

	<li>
		<a href="/timeline/<%=event.id%>"><%=event.title%></a>
    		<div class="event-info">First published <span class="event-created-at"><%=event.created_at%></span> has <%=event.articles.length%> <%=(event.articles.length > 1 ? 'stories':'story')%> mainly about:

    			<ul class="event-concepts">
    				<%
    				for(var j = 0; j < concepts.length; j++){
    					var label = concepts[j].label;
    					var title = concepts[j].title;
    				%>
    					<li><a href="/concept/<%=title%>"><%=label%></a></li>
    				<%
    				}
    				%>
    			</ul>
    		</div>
            <div class="sub-events">
            <%
            if(event.childEvents){
            %>
                <ul>
                <%for(var k = 0; k < event.childEvents.length; k++){%>
                    <%var childEvent = event.childEvents[k];%>
                    <% if(childEvent.articles.length > 0){ %>
                    <li><a href="/timeline/<%=childEvent.id%>"><%=childEvent.title%></a></li>
                    <% } %>
                <%}%>
                </ul>
            <%
            }
            %>
            </div>

	</li>
<%}%>

<%	
}
%>

</ol>



			</section>

			<section role="complementary" id="local-people"></section>
			<section role="complementary" id="local-companies"></section>

		</div>

		<footer>
			<div id="footer-content">
				<p>BBC &copy; 2012</p>
			</div>
		</footer>


	</body>
</html> 
